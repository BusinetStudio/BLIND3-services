block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        // register form
        form()
          div.form-group
            label(for='name') Name:
            input#userCreate(type='text', placeholder='first and last' name='name')
          div.form-group
            label(for='email') Email:
            input#userEmail(type='email', placeholder='name@email.com' name='email')
          div.form-group
            input#pw.form-control(type='password' name='password' placeholder='password')
          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='confirmPassword')
          button.btn.btn-primary(type='submit') Sign up